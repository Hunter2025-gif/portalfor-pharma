# KPI Operations System - Environment Configuration
# Copy this file to .env for production deployment

# =============================================================================
# BASIC CONFIGURATION
# =============================================================================

# Security Settings
DEBUG=False
SECRET_KEY=your-super-secret-key-change-this-in-production-make-it-long-and-random
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,localhost,127.0.0.1

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# For PostgreSQL (recommended for production)
DATABASE_URL=postgres://username:password@localhost:5432/kpi_operations

# For MySQL (alternative)
# DATABASE_URL=mysql://username:password@localhost:3306/kpi_operations

# =============================================================================
# REDIS CONFIGURATION (for real-time features and caching)
# =============================================================================

REDIS_URL=redis://localhost:6379/0

# For Redis with password
# REDIS_URL=redis://:password@localhost:6379/0

# For Redis Cloud services
# REDIS_URL=redis://username:password@hostname:port/database

# =============================================================================
# SECURITY & AUTHENTICATION
# =============================================================================

# Enable Two-Factor Authentication (optional)
USE_2FA=False

# API Rate Limiting
API_THROTTLE_RATE=1000/hour

# =============================================================================
# EMAIL CONFIGURATION (for notifications and 2FA)
# =============================================================================

EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=KPI Operations <noreply@yourcompany.com>

# For SendGrid
# EMAIL_HOST=smtp.sendgrid.net
# EMAIL_HOST_USER=apikey
# EMAIL_HOST_PASSWORD=your-sendgrid-api-key

# For AWS SES
# EMAIL_HOST=email-smtp.us-east-1.amazonaws.com
# EMAIL_HOST_USER=your-ses-username
# EMAIL_HOST_PASSWORD=your-ses-password

# =============================================================================
# CLOUD STORAGE (optional, for file uploads)
# =============================================================================

# AWS S3
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_STORAGE_BUCKET_NAME=your-bucket-name
# AWS_S3_REGION_NAME=us-east-1

# =============================================================================
# INTEGRATION SETTINGS
# =============================================================================

# External API URLs (if integrating with ERP, LIMS, etc.)
# ERP_API_URL=https://your-erp-system.com/api
# ERP_API_KEY=your-erp-api-key
# LIMS_API_URL=https://your-lims-system.com/api
# LIMS_API_KEY=your-lims-api-key

# =============================================================================
# MONITORING & LOGGING (optional)
# =============================================================================

# Sentry for error tracking
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Log level for production
LOG_LEVEL=INFO

# =============================================================================
# PHARMACEUTICAL COMPLIANCE
# =============================================================================

# Audit trail retention (days)
AUDIT_RETENTION_DAYS=2555

# Electronic signatures requirement
ELECTRONIC_SIGNATURES=True

# GMP compliance mode
GMP_COMPLIANCE=True

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================

# Cache timeout (seconds)
CACHE_TIMEOUT=300

# Session timeout (seconds)
SESSION_TIMEOUT=86400

# Maximum file upload size (bytes)
MAX_FILE_SIZE=52428800

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================

# Database backup settings
# BACKUP_ENABLED=True
# BACKUP_SCHEDULE=daily
# BACKUP_RETENTION_DAYS=30
# BACKUP_STORAGE_PATH=/var/backups/kpi_operations

# =============================================================================
# EXAMPLE DEPLOYMENT CONFIGURATIONS
# =============================================================================

# For Docker deployment:
# DATABASE_URL=postgres://kpi_user:password@db:5432/kpi_operations
# REDIS_URL=redis://redis:6379/0
# ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# For Kubernetes deployment:
# DATABASE_URL=postgres://kpi_user:password@postgres-service:5432/kpi_operations
# REDIS_URL=redis://redis-service:6379/0

# For cloud platforms (Heroku, AWS, etc.):
# Use the respective environment variable formats provided by your platform